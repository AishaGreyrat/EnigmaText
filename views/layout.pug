doctype html
html
  head
    title #{title}
    meta(charset='UTF-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/css/styles.css')
  body
    nav
      ul
        li(class='izquierda')
          a(href='/')
            img(class="logo", src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRGxAnDl12_31tQeNFWefs3RjODU5yBEy9WE99UnzFZAw&s")
        if user != ''
          .derecha
            li 
              a(href="#")
                h1 Prueba 
            li
              a(href='/logout')
                i(class='material-symbols-outlined') logout 
        else
          li(class='derecha')
            a(href='/login', id='loginBtn')
              i(class='material-symbols-outlined') login
.container
  block content

